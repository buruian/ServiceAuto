    private void jButtonMasinaEditActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonMasinaEditActionPerformed

        int row = jTableMasini.getSelectedRow();

        int id = (Integer) masiniTableModel.getValueAt(row, 0);// 0 -0 prima coloana

        try {
            masina = masinaService.findByIdMasina(id);
          
            //JOptionPane.showMessageDialog(parenFrame, masina.getMarca());
            
        } catch (MasinaNotFoundException ex) {
            JOptionPane.showMessageDialog(this, "Masina nu este casita cu id=" + id,
                    "Error", JOptionPane.WARNING_MESSAGE);
            
            return;
        }
        
        showMasinaDialog();
    }//GEN-LAST:event_jButtonMasinaEditActionPerformed

    private void jButtonMasinaDeleteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonMasinaDeleteActionPerformed
        int row = jTableMasini.getSelectedRow();
        int masinaId = (Integer) jTableMasini.getValueAt(row, 0);// 0 -0 prima coloana
        try {
            masina = masinaDao.findById(masinaId);
            proprietar = masina.getProprietar();

            int rez = JOptionPane.showConfirmDialog(parenFrame, "esti sigur vrei sa sterg masina?",
                    "Question", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);

            switch (rez) {
                case JOptionPane.YES_OPTION:
                    //delete all coments of this user
                    //comentariiDao.deleteAllUserCommentsByUserId(userId)

                   
                    masinaDao.delete(masina);
                    proprietarDao.delete(proprietar);

                    JOptionPane.showMessageDialog(parenFrame, "Reparatie sters cu success", "Succes",
                            JOptionPane.INFORMATION_MESSAGE);
                    break;
                case JOptionPane.NO_OPTION:
                case JOptionPane.CLOSED_OPTION:
                    break;
            }
              } catch (MasinaNotFoundException ex) {
             JOptionPane.showMessageDialog(parenFrame, "Masina nu este gasit cu id=" + masinaId,
                    "Error", JOptionPane.WARNING_MESSAGE);
            Logger.getLogger(LucratoriPanel.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(MasiniPanel.class.getName()).log(Level.SEVERE, null, ex);
        }

    
        refreshMasiniTable();
    }//GEN-LAST:event_jButtonMasinaDeleteActionPerformed

